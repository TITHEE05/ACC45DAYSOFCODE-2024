#include <bits/stdc++.h>
using namespace std;

int main() {
	int n,x;
	cout << "number of cards";
	cin >> n;
	cout << "number of cards facing up";
	cin >> x;
	if (x>(n-x))
	{
	    cout << "the minimum number of flips required for all cards to face dame direction are: " << n-x << endl;
	}
	else 
	{
	    cout << "the minimum number of flips required for all cards to face same direction are: " << x << endl;
	}

return 0;
}
